#!/bin/bash
source lib.tegetype.sh
set -eEu -o pipefail

cmd_exists drain || { echo "drain: not found" >&2; exit 1; }
cmd_exists tee-p || { echo "tee-p: not found" >&2; exit 1; }
cmd_exists bedtools || { echo "bedtools: not found" >&2; exit 1; }

strand=
extension=0
OPTIND=1
while getopts "se:" OPT "$@"; do
    case $OPT in
	s)
	    strand=-s
	    ;;
	e)
	    extension=$OPTARG
	    ;;
    esac
done
shift $(($OPTIND - 1))

splitter () {
    exec tee-p >(exec cat >&$out_fd)
}

joiner () {
    exec bedtools intersect $strand -c -a - -b <(exec extend-bed $extension <&$in_fd)
}

double_pipe
